CREATE TABLE employee (
    S_No INT PRIMARY KEY,
    Name VARCHAR(50),
    Designation VARCHAR(50),
    Branch VARCHAR(50)
);

INSERT INTO employee VALUES (1, 'Ram', 'Manager','IT');
INSERT INTO employee VALUES (2, 'Santhosh', 'Supervisor','CSE');
INSERT INTO employee VALUES (3, 'Hari', 'Assistant','ECE');

ALTER TABLE employee MODIFY Name VARCHAR(100);
ALTER TABLE employee DROP COLUMN Branch;

SELECT * FROM employee;

 DESC employee;

RENAME employee TO staff;

TRUNCATE TABLE staff;

DROP TABLE staff;

